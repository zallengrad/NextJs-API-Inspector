{
  "name": "nextjs-api-inspector",
  "displayName": "NextJS API Inspector",
  "description": "Automatically analyze and document Next.js API routes with AI-powered insights",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:nextjs-api-inspector-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nextjs-api-inspector",
          "title": "NextJS API Inspector",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "nextjs-api-inspector": [
        {
          "type": "webview",
          "id": "nextjs-api-inspector-sidebar",
          "name": "API Inspector",
          "contextualTitle": "NextJS API Inspector"
        }
      ]
    },
    "configuration": {
      "title": "NextJS API Inspector",
      "properties": {
        "nextjsApiInspector.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key for AI analysis",
          "order": 1
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "node esbuild.js",
    "build:webview": "cd webview-ui && npm run build",
    "watch": "node esbuild.js --watch",
    "watch:webview": "cd webview-ui && npm run dev",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "axios": "^1.13.2",
    "node-fetch": "^2.7.0"
  }
}
