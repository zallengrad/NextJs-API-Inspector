{
  "name": "nextjs-api-inspector",
  "displayName": "NextJS API Inspector",
  "description": "Automatically analyze and document Next.js API routes with AI-powered insights",
  "version": "0.0.1",
  "publisher": "zallengrad",

  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nextjs-api-inspector"
  },
  "keywords": [
    "nextjs",
    "api",
    "documentation",
    "ai",
    "gemini",
    "inspector",
    "route",
    "analyzer"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],

  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nextjs-api-inspector",
          "title": "NextJS API Inspector",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "nextjs-api-inspector": [
        {
          "type": "webview",
          "id": "nextjs-api-inspector-sidebar",
          "name": "API Inspector",
          "contextualTitle": "NextJS API Inspector"
        }
      ]
    },
    "configuration": {
      "title": "NextJS API Inspector",
      "properties": {
        "nextjsApiInspector.provider": {
          "type": "string",
          "enum": ["gemini", "openai", "custom"],
          "default": "gemini",
          "description": "AI Provider to use for analysis",
          "order": 1
        },
        "nextjsApiInspector.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the selected provider",
          "order": 2
        },
        "nextjsApiInspector.model": {
          "type": "string",
          "default": "gemini-2.5-flash",
          "description": "Model name to use",
          "order": 3
        },
        "nextjsApiInspector.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Base URL for OpenAI-compatible APIs (optional for Gemini)",
          "order": 4
        },
        "nextjsApiInspector.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "[DEPRECATED] Use 'apiKey' instead. Google Gemini API Key for AI analysis",
          "order": 5,
          "deprecationMessage": "Use 'nextjsApiInspector.apiKey' instead"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "node esbuild.js",
    "build:webview": "cd webview-ui && npm run build",
    "watch": "node esbuild.js --watch",
    "watch:webview": "cd webview-ui && npm run dev",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "axios": "^1.13.2",
    "node-fetch": "^2.7.0"
  }
}
